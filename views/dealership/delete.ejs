<%# Content Heading %>
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
} %>

<%# Message Block %>
<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
<% } %>

<p>You are about to delete this dealership. This process cannot be undone. Are you absolutely sure that you want to do this?</p>
<div class="alignCenter">
    <div id="loginFormContainer">
        <form action="/dealership/delete" method="post">
            <div><label for="dealershipName">Name*:</label><input type="text" name="dealership_name" id="dealershipName" value="<%= locals.dealership_name %>" disabled></div>
            <div><label for="dealershipAddress">Street Address*:</label><input type="text" name="dealership_address" id="dealershipAddress" value="<%= locals.dealership_address %>" disabled></div>
            <div class="buttonContainer"><input type="submit" value="Delete"></div>
            <input type="hidden" name="dealership_id"
                <% if(locals.dealership_id) { %> value="<%= locals.dealership_id %>"
            <% } %>>
        </form>
    </div>
</div>