<%# Content Heading %>
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
} %>

<%# Message Block %>
<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
<% } %>

<div class="alignCenter">
    <div id="loginFormContainer">
        <form action="/inv/management/classification" method="post">
            <div class="inputInstructions">Use this form to create a new vehicle classification. Please note, classification names cannot contain spaces or special characters.</div>
            <div><span>Classification Name*:</span><input type="text" name="classification_name" id="classificationName" value="<%= locals.classificationName %>" pattern="[a-zA-Z0-9]+" required></div>
            <div class="buttonContainer"><input type="submit" value="Add Classification"></div>
        </form>
        <div class="fineprint">* Denotes a required field.</div>
        
    </div>
</div>