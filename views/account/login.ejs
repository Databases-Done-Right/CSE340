<%# Content Heading %>
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
} %>

<%# Message Block %>
<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
<% } %>

<div class="alignCenter">
    <div id="loginFormContainer">
        <form id="loginForm" action="/account/login" method="post">
            <div><label for="accountEmail">Email:</label><input type="email" name="account_email" id="accountEmail" value="<%= locals.account_email %>" required></div>
            <div><label for="accountPassword">Password:</label><input type="password" name="account_password" id="accountPassword" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required></div>
            <div class="inputInstructions">
                <ul>
                    <li>Your password must be a minimum of 12 characters in length</li>
                    <li>Your password must include at least 1 capital letter</li>
                    <li>Your password must include at least 1 number</li>
                    <li>Your password must include at least 1 special character</li>
                </ul>
            </div>
            <div class="buttonContainer"><input type="submit" value="Login"></div>
        </form>
        <div class="noAccountLink">Don't have an account? <a href="/account/register">Sign-Up</a></div>
    </div>
</div>